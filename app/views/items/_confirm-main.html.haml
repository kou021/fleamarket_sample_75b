.confirm-main
  .confirm
    .confirm__title
      .text
        購入内容の確認
    .confirm__item
      .content
        = image_tag "material/pict/pict-reason-01.jpg", alt: "商品写真", class: "image"
        .detail
          .item-name
            UNIQLOジーンズ
          .item-price
            ￥1,000（税込）送料込み
    .confirm__price
      .content
        .text
          支払い金額
        .buy-price
          ￥1,000
      .user-point
        = check_box_tag :check1 
        = label_tag :check1, 'ポイントを使用（所持ポイント: P0）'
    .confirm__pay
      .content
        .text
          支払い方法
        = link_to "#", class: "register-btn" do
